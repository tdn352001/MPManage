<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_song_singer"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:scaleType="fitXY"
        app:riv_corner_radius="10dp" />

    <TextView
        android:id="@+id/tv_song_singer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_toLeftOf="@id/btn_delete_song_singer"
        android:layout_toEndOf="@id/img_song_singer"
        android:layout_toRightOf="@id/img_song_singer"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="@string/ten_ca_si"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_toStartOf="@id/btn_delete_song_singer" />

    <ImageView
        android:id="@+id/btn_delete_song_singer"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_clear"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/delete"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp" />

</RelativeLayout>