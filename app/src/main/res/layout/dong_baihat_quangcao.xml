<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dong_baihat"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="25dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_baihat_banner"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="fitXY"
            tools:ignore="ContentDescription" />

        <RelativeLayout
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_tenbaihat_banner"
                android:layout_width="wrap_content"
                android:maxWidth="45mm"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/name_song"
                android:textColor="@color/black"
                android:textSize="18sp"
                tools:ignore="InOrMmUsage,RelativeOverlap" />
            <TextView
                android:id="@+id/txt_tencasi_banner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="45mm"
                android:layout_below="@id/txt_tenbaihat_banner"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/name_singer"
                android:textColor="@color/black"
                android:textSize="14sp"
                tools:ignore="InOrMmUsage" />

            <ImageView
                android:id="@+id/img_delete_baihat_banner"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_delete"
                tools:ignore="ContentDescription,InOrMmUsage" />

        </RelativeLayout>

    </LinearLayout>







</androidx.cardview.widget.CardView>