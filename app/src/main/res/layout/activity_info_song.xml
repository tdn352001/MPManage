<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_info_song"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        app:elevation="3dp"
        app:layout_scrollFlags="scroll|enterAlways" />
    <LinearLayout
        android:layout_below="@id/toolbar_info_song"
        android:layout_marginTop="5dp"
        android:layout_centerInParent="true"
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_marginTop="15dp"
            android:background="#7A7A78"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/txt_info_id_bai_hat"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="start|center"
            android:text="@string/id_bai_hat"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:elevation="0dp"
            app:icon="@drawable/ic_password"
            app:iconPadding="15dp"
            app:iconTint="@color/teal_700"
            app:strokeColor="@android:color/white"
            app:strokeWidth="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/txt_info_ten_bai_hat"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="start|center"
            android:text="@string/name_song"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:elevation="0dp"
            app:icon="@drawable/ic_song"
            app:iconPadding="15dp"
            app:iconTint="@color/teal_700"
            app:strokeColor="@android:color/white"
            app:strokeWidth="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/txt_info_casi_bai_hat"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="start|center"
            android:text="@string/singer"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:elevation="0dp"
            app:icon="@drawable/ic_person"
            app:iconPadding="15dp"
            app:iconTint="@color/teal_700"
            app:strokeColor="@android:color/white"
            app:strokeWidth="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/txt_info_hinh_bai_hat"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="start|center"
            android:text="@string/link_hinh"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:elevation="0dp"
            app:icon="@drawable/ic_image"
            app:iconPadding="15dp"
            app:iconTint="@color/teal_700"
            app:strokeColor="@android:color/white"
            app:strokeWidth="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/txt_info_file_bai_hat"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="start|center"
            android:text="@string/link_nhac"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:elevation="0dp"
            app:icon="@drawable/ic_file"
            app:iconPadding="15dp"
            app:iconTint="@color/teal_700"
            app:strokeColor="@android:color/white"
            app:strokeWidth="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/txt_info_lươt_thich_bai_hat"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="start|center"
            android:text="@string/like"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:elevation="0dp"
            app:icon="@drawable/ic_love"
            app:iconPadding="15dp"
            app:iconTint="@color/teal_700"
            app:strokeColor="@android:color/white"
            app:strokeWidth="0dp" />

        <View
            android:layout_marginTop="25dp"
            android:background="#7A7A78"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

    </LinearLayout>


</RelativeLayout>


